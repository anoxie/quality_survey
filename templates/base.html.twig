<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{{ navbar_title }}{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href="{{ asset('vendor/Bootstrap/ccs/bootstrap.min.css') }}"/>
            <link rel="stylesheet" type="text/css" href="{{ asset('vendor/DataTables/datatables.min.css') }}"/>
            <link rel="stylesheet" type="text/css" href="{{ asset('vendor/fontawesome/css/all.min.css') }}"/>
            <link rel="stylesheet" type="text/css" href="{{ asset('css/navbar.css') }}"/>
            <link rel="stylesheet" type="text/css" href="{{ asset('css/divPositionement.css') }}"/>
            <link rel="stylesheet" type="text/css" href="{{ asset('css/footer.css') }}"/>
            <link rel="stylesheet" type="text/css" href="{{ asset('css/general.css') }}"/>
